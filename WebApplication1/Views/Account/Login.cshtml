@model WebApplication1.Models.DB.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="col-md-offset-4 col-md-3" style="margin-left: 38%;">
            <div class="form-login">
                <h3>Welcome</h3>
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control input-sm chat-input", type = "text", placeholder = "Username" })
                @Html.ValidationMessageFor(model => model.Username)
                <br>
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control input-sm chat-input", type = "password", placeholder = "Password" })
                @Html.ValidationMessageFor(model => model.Password)
                <br>
                <div class="wrapper">
                    <span class="group-btn">

                        <button type="submit" class="btn btn-primary">Login <i class="fa fa-sign-in"></i></button> 
                    </span>
                </div>
            </div>

        </div>
    </div>
}


